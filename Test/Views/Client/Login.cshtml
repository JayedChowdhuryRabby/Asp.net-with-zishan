
@{
    ViewBag.Title = "Login";
}

@if (Model != null)
{
    @*<h2>@ViewBag.Login.Uname</h2>
        <h3>@ViewBag.Login.Pass</h3>*@
    <h2>@Model.Uname</h2>
    <h3>@Model.Pass</h3>
}

<h2>Login</h2>
@Html.ValidationSummary()
<form method="post">
    <input type="text" class="form-control" placeholder="Username" value="@(Model==null ? "":Model.Uname)" name="Uname" />
    @Html.ValidationMessage("Uname")<br />
    <input type="password" class="form-control" placeholder="Password" value="@(Model==null ? "":Model.Pass)" name="Pass" />
    @Html.ValidationMessage("Pass")<br />
    <input type="submit" class="btn btn-danger" />
</form>

